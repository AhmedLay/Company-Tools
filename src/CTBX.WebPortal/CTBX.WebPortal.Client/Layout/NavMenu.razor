@inherits LayoutComponentBase
<MudLayout>
    <MudThemeProvider @bind-IsDarkMode="_isDarkMode" />
    <MudAppBar Elevation="1" Color="@(_isDarkMode ? Color.Dark : Color.Info)">
        <MudIconButton Icon="@(_open ? Icons.Material.Filled.Close : Icons.Material.Filled.Menu)" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />

        <MudSpacer />

        <MudText Typo="Typo.h6" Align="Align.Left">CompanyToolBox</MudText>

        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Mail" Color="Color.Inherit" />

        <MudIconButton Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" />

        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />

        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                       Color="Color.Inherit" OnClick="@ToggleDarkMode" />
    </MudAppBar>

    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <img src="assets/logo.png" alt="CompanyToolbox Logo" style="height:40px; margin-left:10px;" />
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/overview" Match="NavLinkMatch.All" OnClick="@(() => NavigateAndCloseDrawer("/overview"))">
                <MudIcon Icon="@Icons.Material.Filled.AutoAwesomeMosaic" />
                Overview
            </MudNavLink>

            <MudNavLink Href="/vacation" Match="NavLinkMatch.All" OnClick="@(() => NavigateAndCloseDrawer("/vacation"))">
                <MudIcon Icon="@Icons.Material.Filled.BeachAccess" />
                Vacation Request
            </MudNavLink>

            <MudNavLink Href="/sickleavereport" Match="NavLinkMatch.All" OnClick="@(() => NavigateAndCloseDrawer("/sickleavereport"))">
                <MudIcon Icon="@Icons.Material.Filled.Healing" />
                Sick Report
            </MudNavLink>

            <MudNavLink Href="/settings" Match="NavLinkMatch.All" OnClick="@(() => NavigateAndCloseDrawer("/settings"))">
                <MudIcon Icon="@Icons.Material.Filled.Settings" />
                Settings
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">

        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _open = false;
    private bool _isDarkMode;

    [Inject]
    public NavigationManager NavigationManager { get; set; } = default!;

    private void ToggleDrawer()
    {
        _open = !_open;
    }

    private void NavigateAndCloseDrawer(string uri)
    {
      
        _open = false;
        StateHasChanged();  
        NavigationManager.NavigateTo(uri);  
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}

