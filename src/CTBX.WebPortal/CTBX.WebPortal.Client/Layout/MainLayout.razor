@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="@(_isDarkMode ? Color.Dark : Color.Info)">

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />

        <a href="https://nirusolutions.de/" target="_blank" rel="noopener noreferrer">
            <MudText Typo="Typo.h5" Class="logo-container">
                <img src="assets/logo2.png" alt="CompanyToolbox Logo" class="logo-image" />
            </MudText>
        </a>

        <MudSpacer />

        <MudLink Href="/" Style="text-decoration: none;">
            <MudText Typo="Typo.h6" Align="Align.Left" Style="color: white;">CompanyToolBox</MudText>
        </MudLink>



        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Filled.Mail" Color="Color.Inherit" />

        <MudIconButton Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" />

        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />

        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode)"
                       Color="Color.Inherit" OnClick="@ToggleDarkMode" />

    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavRebuild />
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}
