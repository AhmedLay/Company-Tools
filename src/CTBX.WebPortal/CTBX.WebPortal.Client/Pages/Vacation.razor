@page "/vacation"
<PageTitle>Vacation Request</PageTitle>

<MudCard>
    <MudCardContent>
        <MudText Align="Align.Center">Vacation Request</MudText>
        <MudForm Spacing="2">
            <MudTextField T="string" Label="LAALALALA" />
            <MudTextField T="string" Label="Personal ID (later selbst ausgefüllt)" />
            <MudDatePicker Label="From" />
            <MudDatePicker Label="To" />

            <MudForm Spacing="2">
                <MudText Align="Align.Center">Sonstiges</MudText>
                <MudTextField T="string" Label="Random Text" />
                <MudNumericField T="int" Label="Lala" />
            </MudForm>

            <MudTextField T="int" Label="Remaining Vacation Days" Value="10" ReadOnly="true" Disabled="true" />

            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudButton OnClick="SaveDraft" Variant="Variant.Outlined" Color="Color.Secondary" FullWidth="true">Save Draft</MudButton>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudButton OnClick="SubmitRequest" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Submit Request</MudButton>
                </MudItem>
            </MudGrid>
        </MudForm>
    </MudCardContent>
</MudCard>

@code {
    private void SaveDraft()
    {
        Console.WriteLine("Draft saved successfully!");
    }

    private void SubmitRequest()
    {
        Console.WriteLine("Vacation request submitted!");
    }
}
