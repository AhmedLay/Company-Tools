@page "/holidays-view"
@using CTBX.ImportHolidays.Shared
@inherits HolidayViewBase

<MudDataGrid Items="HolidaysList" Filterable="false" Groupable="false" Class="mt-4" QuickFilter="@_quickFilter">
	<ToolBarContent>
		<MudText Typo="Typo.h6">Holidays</MudText>
		<MudIconButton Icon="@Icons.Material.Filled.Refresh" Color="Color.Primary" OnClick="ReloadHolidaysData" />
		<MudSpacer />
		<MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
					  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
	</ToolBarContent>
	<Columns>
		<PropertyColumn Property="x => x.Country" Title="Country" />
		<PropertyColumn Property="x => x.State" Title="State" />
		<PropertyColumn Property="x => x.HolidayName" Title="HolidayName" />
		<PropertyColumn Property="x => x.HolidayDate" Title="HolidayDate" />
		<PropertyColumn Property="x => x.IsGlobal" Title="IsGlobal" />
</Columns>
	<PagerContent>
		<MudDataGridPager />
	</PagerContent>
</MudDataGrid>

